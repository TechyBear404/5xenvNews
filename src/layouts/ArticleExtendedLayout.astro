---
import { type CollectionEntry, getEntryBySlug } from 'astro:content'
import { Image } from 'astro:assets'

// import CategoryList from "./CategoryList.astro"

type Props = {
	article: CollectionEntry<'articles'>
}

const { article } = Astro.props
// const author = await getEntryBySlug("authors", article.data.author)
// const image = await getEntryBySlug("articles", article.data.image)
---

<article
	class="rounded-xl transition duration-300 ease-in-out hover:translate-x-10 hover:bg-zinc-800 hover:shadow-lg hover:shadow-slate-200/10"
>
	<a href={`/article/${article.slug}`}>
		<div class="flex">
			<Image
				src={article.data.image}
				alt={article.data.title}
				width={300}
				height={300}
				class="object-fit rounded-2xl shadow-xl"
			/>
			<div class="p-4">
				<div class="mb-3 inline-block text-3xl font-semibold">
					{article.data.title}
				</div>

				<p class="mb-4 line-clamp-3 text-xl text-zinc-500">
					{article.body}
				</p>

				<div class="flex items-center justify-between">
					<div class="text-zinc-700">
						{article.data.date}
					</div>
				</div>
			</div>
		</div>
		<!-- <div class="mb-4">
          <ArticlesList categories={article.data.categories} />
      </div> -->
	</a>
</article>
