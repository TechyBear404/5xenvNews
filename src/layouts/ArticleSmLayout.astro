---
import { type CollectionEntry, getEntryBySlug } from 'astro:content'
import { Image } from 'astro:assets'

// import CategoryList from "./CategoryList.astro"

type Props = {
	article: CollectionEntry<'articles'>
}

const { article } = Astro.props
// const author = await getEntryBySlug("authors", article.data.author)
// const image = await getEntryBySlug("articles", article.data.image)
---

<article
	class="rounded-xl transition duration-300 ease-in-out hover:translate-x-5 hover:bg-zinc-800"
>
	<a href={`/article/${article.slug}`}>
		<div class="relative">
			<Image
				src={article.data.image}
				alt={article.data.title}
				width={600}
				height={600 / 1.5}
				class="aspect-thumbnail rounded-2xl object-cover shadow-xl"
			/>
			<div
				class="absolute bottom-0 left-0 inline-block bg-zinc-900/40 py-2 pl-4 text-xl font-semibold"
			>
				{article.data.title}
			</div>
		</div>
