---
import BaseLayout from '../layouts/BaseLayout.astro'
import ArticleMain from '../components/ArticleMain.astro'
import { getCollection } from 'astro:content'
import Article from '../components/Article.astro'

const { pageTitle } = Astro.props

const articles = await getCollection('articles')
---

<BaseLayout pageTitle={pageTitle}>
	<main class="">
		<ArticleMain />
		<div class="mx-auto flex max-w-4xl pt-10">
			<div class="grid grid-cols-12 gap-10">
				<div class="col-span-8 grid grid-cols-2 gap-5">
					{articles.slice(2, 6).map((article) => <Article article={article} />)}
				</div>
				<div class="col-span-2 flex flex-col gap-3">
					{articles.slice(7).map((article) => <Article article={article} />)}
				</div>
			</div>
		</div>
	</main>
</BaseLayout>
